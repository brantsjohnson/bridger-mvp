{
  "version": 2,
  "buildCommand": "./build.sh",
  "outputDirectory": "apps/dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/auth",
      "destination": "/index.html"
    },
    {
      "source": "/core",
      "destination": "/index.html"
    },
    {
      "source": "/quiz",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 